    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTORCH_CUDA_ALLOC_CONF": "max_split_size_mb:512"
            },
            "justMyCode": false
        },
        {
            "name": "eval_handcrafted",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/evaluate_handcrafted.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTORCH_CUDA_ALLOC_CONF": "max_split_size_mb:512"
            },
            "justMyCode": false
        },
        {
            "name": "preprocess_vg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/preprocess_vg.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
